	<param name="minY"> 3 </param> <param name="maxY"> 6 </param>
	<param name="elementResJ"> 10 </param>
	-->

	<param name="minZ"> 0.0f </param> <param name="maxZ"> 1.0f </param>
	<param name="elementResK"> 1000 </param>

	<!-- Integration Scheme configuration -->
  <param name="gaussParticlesX">4</param>
  <param name="gaussParticlesY">4</param>
  <param name="gaussParticlesZ">4</param>
	
	<!-- Set up BCs -->
	<include>./vc_projMesh_shear.xml</include>

	<!--
	<include>./MeshParticleVelocityVP.xml</include>
	<include>Underworld/Viewports/ParticleMaterialVP.xml</include>
	-->
	<include>VelocityPressureVP.xml</include>
	<include>gLucifer/window.xml</include>
	<struct name="components" mergeType="merge">
		<struct name="camera">
			 <param name="Type">lucCamera</param>
			 <param name="focalPointX">0.500000</param>
			 <param name="focalPointY">4.500000</param>
			 <param name="focalPointZ">0.000000</param>
			 <param name="translateX">0.576999</param>
			 <param name="translateY">4.446289</param>
			 <param name="translateZ">-15.832830</param>
			 <param name="rotateX">0.0</param>
			 <param name="rotateY">0.0</param>
			 <param name="rotateZ">0.0</param>
			 <param name="aperture">45.0</param>
			 <param name="CoordinateSystem">RightHanded</param>
		</struct>
		<struct name="window" mergeType="merge">
			<param name="Viewport">VelocityVP PressureVP </param>
		</struct>
	</struct>
