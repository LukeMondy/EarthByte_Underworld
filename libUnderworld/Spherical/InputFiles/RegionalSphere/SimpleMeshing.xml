<?xml version="1.0"?>
<!DOCTYPE StGermainData SYSTEM "stgermain.dtd">
<!-- A StGermain input file -->
<!-- DTD to validate against -->
<StGermainData xmlns="http://www.vpac.org/StGermain/XML_IO_Handler/Jun2003">

	<!-- Load the plugin that sets up the app, plus any others you require -->
	<list name="import">
		<param>Underworld</param>
		<param>Spherical</param>
	</list>

	<list name="plugins" mergeType="merge">
		<struct>
			<param name="Type">StgFEM_StandardConditionFunctions</param>
			<param name="Context">context</param>
		</struct>
		<struct>
			<param name="Type">StgFEM_FrequentOutput</param>
			<param name="Context">context</param>
		</struct>
		<struct>
			<param name="Type">Spherical_SphericalAlgorithms</param>
			<param name="Context">context</param>
		</struct>
	</list>

	<include>StgFEM/ConstantMesh.xml</include>
	<include>Spherical/SphericalMesh.xml</include>
	<include>StgFEM/VelocityField.xml</include>
	<include>StgFEM/PressureField.xml</include>
	<include>Underworld/GaussSwarm.xml</include>
	<!--
	<include>StgFEM/TemperatureField.xml</include>
	<include>StgFEM/TempAdvDiff.xml</include>
	<include>PICellerator/MaterialPointSwarm.xml</include>
	<include>PICellerator/AllowOutflow.xml</include>
	<include>Spherical/StokesFlowUzawaPIC.xml</include>
	-->
	<struct name="components" mergeType="merge">
		<struct name="context">
			<param name="Type">UnderworldContext</param>
		</struct>	

	 </struct>

	<!-- Simulation control -->
	<param name="maxTimeSteps"> -1 </param>
	<param name="outputEvery"> 1 </param>
	<param name="dumpEvery"> 1 </param>
	<param name="checkpointEvery"> 1 </param>
	<param name="outputPath"> ./simpleMesh </param>

	<!-- Geometry & Mesh setup -->
	<param name="velocityMesh">linearMesh</param>
	<param name="pressureMesh">constantMesh</param>
	<param name="elementMesh">linearMesh</param>
	<param name="dim"> 3 </param>
	<param name="shadowDepth"> 1 </param>


	<![CDATA[
	How the mesh is specified

	         Y
		 |
		 |    
		 |  /  
		 | / 
		 |/
		 |----------- X
                /
	       /
	      /
	     Z

	     The domain is specified in spherical coordinates, (r,theta,phi).
	     To define these spaces we use the existing nomencluture:

	     elementResI is the discretisation of theta, the angle in the X-Y plane (0 is along X-axis)
	     elementResJ is the discretisation of radius, the radial length
	     elementResK is the discretisation of phi, the angle in the X-Y plane (0 is along Y-axis)

        ]]>

	<param name="minX"> -45 </param> <param name="maxX"> 45 </param> 
	<param name="elementResI"> 8 </param>

	<param name="minY"> 0.5 </param> <param name="maxY"> 1 </param>
	<param name="elementResJ"> 4 </param>

	<param name="minZ"> -45 </param> <param name="maxZ"> 45 </param> 
	<param name="elementResK"> 8 </param>

	<!-- material points swarm parameters -->
	<param name="particleLayoutType">random</param>
	<param name="particlesPerCell">20</param>
	<param name="seed">13</param>
	<param name="gaussParticlesX"> 2 </param>
	<param name="gaussParticlesY"> 2 </param>
	<param name="gaussParticlesZ"> 2 </param>
	<param name="defaultDiffusivity"> 1e-3 </param>
	
	<!-- Set up BCs -->
	<!--
	<include> ./temperatureBCs.xml </include>
	<include> ./temperatureIC.xml </include>
	-->


	<include> ./lidDrivenBCs.xml </include>
	<!--
	<include> ./annulus.Periodic.xml </include>
	<include> ./freeSlipBCs.xml </include>
	-->


